{% extends "base.html.twig" %}

{% block title %}Administration &Eacute;dition {{edition}} - Appariement du tour : {{round+1}}{% endblock %}

{% block body %}
<h1>Administration &Eacute;dition {{edition}} - tour {{round+1}}</h1>
<h2>Matchs <span class="badge bg-secondary">{{ games|length }}</span></h2>
<a href="{{ path('fantasy_football_tournament_admin_main',{'edition':edition},true )  }}"class="btn btn-primary" role="button"  >Administration</a>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Table</th>
            <th>Adversaire 1</th>
            <th>Adversaire 2</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
{% for game in games %}
        <tr>
            <td>{{game.getTableNumber()}}</td>
            <td><a href="{{ path('_view_coach',{'coachId':game.getCoach1().getId()},true )  }}" class="btn btn-info btn-sm" role="button" >{{game.getCoach1().getName()}}</a></td>
            <td><a href="{{ path('_view_coach',{'coachId':game.getCoach2().getId()},true ) }}" class="btn btn-info btn-sm" role="button" >{{game.getCoach2().getName()}}</a></td>
            <td>
                <a href="{{ path('_resume_game',{'gameId':game.getId()},true ) }}" class="btn btn-primary btn-sm" role="button" >R&eacute;sumer</a>
                <a href="{{ path('_delete_game',{'gameId':game.getId()},true ) }}" class="btn btn-danger btn-sm" role="button" >Supprimer</a></td>
        </tr>
{% endfor %}
    </tbody>
</table>
<a href="{{ path('fantasy_football_tournament_admin_main',{'edition':edition},true )  }}"class="btn btn-primary btn-sm" role="button"  >Administration</a>
{% endblock %}