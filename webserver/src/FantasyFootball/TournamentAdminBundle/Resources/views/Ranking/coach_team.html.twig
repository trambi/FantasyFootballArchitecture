{% extends "base.html.twig" %}

{% block title %}Classement par triplette &eacute;dition {{edition}}{% endblock %}

{% block body %}
{% block menuButtons %}
{% for coachRanking in availableRankings.coach|keys %}
<a href="{{ path('_coach_ranking',{'edition':edition,'type':coachRanking} )  }}" class="btn btn-info" role="button">Classement individuel ({{coachRanking}})</a>
{% endfor %}
{% for coachTeamRanking in availableRankings.coachTeam|keys %}
<a href="{{ path('_coach_team_ranking',{'edition':edition,'type':coachTeamRanking} )  }}" class="btn btn-info" role="button">Classement Ã©quipe ({{coachTeamRanking}})</a>
{% endfor %}
<a href="{{ path('_all_ranking',{'edition':edition} )  }}" class="btn btn-info" role="button">Synth&egrave;se</a>
<a href="{{ path('fantasy_football_tournament_admin_main',{'edition':edition} )  }}" class="btn btn-primary" role="button">Administration</a>
{% endblock %}
<h2>Classement par &eacute;quipe &eacute;dition {{edition}}</h2>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>&Eacute;quipe</th>
            <th>Participants</th>
{% for param in params %}
            <th>{{param}}</th>
{% endfor %}
        </tr>
    </thead>
    <tbody>
{% for coachTeam in ranking %}
        <tr>
            <td>{{loop.index}}</td>
            <td><a href="{{ path('_view_coach_team',{'coachTeamId':coachTeam.id} )  }}" class="btn btn-info" role="button" >{{coachTeam.name}}</a></td>
            <td>
    {% for innerCoach in coachTeam.teams %}{% if loop.last %} et {% else %}{% if loop.first == false %}, {% endif %}{% endif %}{{ innerCoach.coach }}{% endfor %}
{% for param in params %}
            <td>{{ attribute(coachTeam,param) }}</td>
{% endfor %}
        </tr>
{% endfor %}
    </tbody>
</table>
{{ block('menuButtons') }}

<style>
@media print {
table th:nth-child(3),
table td:nth-child(3),
body > a {
    display:none;
}
}
</style>

{% endblock %}